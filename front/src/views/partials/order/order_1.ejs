<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mis Órdenes - TechStore</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
</head>

<body class="bg-slate-800">

    <%- include('../main/nav') %>
        <!-- Main Content -->
        <main class="container mx-auto px-4 py-8">
            <!-- Page Title -->
            <div class="mb-8">
                <h1 class="text-3xl font-bold text-gray-200 mb-2">Mis Órdenes</h1>
                <p class="text-gray-300">Historial completo de tus compras</p>
            </div>

            <!-- Filters -->
            <div class="bg-slate-700 rounded-lg shadow-sm p-6 mb-6">
                <div class="flex flex-wrap gap-4 items-center">
                    <div class="flex items-center space-x-2">
                        <i data-lucide="filter" class="w-5 h-5 text-gray-400"></i>
                        <span class="font-medium text-white">Filtros:</span>
                    </div>
                    <select
                        class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-1000 focus:border-transparent">
                        <option value="">Todos los estados</option>
                        <option value="pending">Pendiente</option>
                        <option value="processing">Procesando</option>
                        <option value="shipped">Enviado</option>
                        <option value="delivered">Entregado</option>
                        <option value="cancelled">Cancelado</option>
                    </select>
                    <input type="date"
                        class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-1000 focus:border-transparent">
                    <input type="date"
                        class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-1000 focus:border-transparent">
                </div>
            </div>

            <!-- Orders List -->
            <div class="space-y-6">
                <!-- Ejemplo de órdenes con diferentes estados -->

                <!-- Orden 1 - Pendiente -->
                <div class="bg-slate-700 rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                    <div class="p-6">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center space-x-4">
                                <div class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm font-medium">
                                    <i data-lucide="clock" class="w-4 h-4 inline mr-1"></i>
                                    Pendiente
                                </div>
                                <div class="text-gray-300">
                                    <span class="font-medium">Orden #ORD-2024-001</span>
                                    <span class="mx-2">•</span>
                                    <span>4 Jul 2025, 10:30 AM</span>
                                </div>
                            </div>
                            <div class="text-right">
                                <div class="text-2xl font-bold text-gray-200">$1,299.99</div>
                                <div class="text-sm text-gray-400">3 productos</div>
                            </div>
                        </div>

                        <!-- Productos en la orden -->
                        <div class="border-t pt-4">
                            <div class="flex items-center space-x-4 mb-3">
                                <img src="https://via.placeholder.com/60x60" alt="Producto"
                                    class="w-15 h-15 object-cover rounded-lg">
                                <div class="flex-1">
                                    <h4 class="font-medium text-gray-200">iPhone 15 Pro</h4>
                                    <p class="text-sm text-gray-300">Color: Azul Titanio, 256GB</p>
                                    <p class="text-sm font-medium text-gray-200">$999.99 x 1</p>
                                </div>
                            </div>
                            <div class="flex items-center space-x-4 mb-3">
                                <img src="https://via.placeholder.com/60x60" alt="Producto"
                                    class="w-15 h-15 object-cover rounded-lg">
                                <div class="flex-1">
                                    <h4 class="font-medium text-gray-200">AirPods Pro</h4>
                                    <p class="text-sm text-gray-300">Con cancelación de ruido</p>
                                    <p class="text-sm font-medium text-gray-200">$249.99 x 1</p>
                                </div>
                            </div>
                            <div class="text-sm text-gray-400 mb-4">+ 1 producto más</div>
                        </div>

                        <!-- Acciones -->
                        <div class="flex items-center justify-between pt-4 border-t">
                            <div class="flex items-center space-x-4">
                                <button class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                                    <i data-lucide="eye" class="w-4 h-4 inline mr-1"></i>
                                    Ver detalles
                                </button>
                                <button class="text-red-600 hover:text-red-800 text-sm font-medium">
                                    <i data-lucide="x" class="w-4 h-4 inline mr-1"></i>
                                    Cancelar
                                </button>
                            </div>
                            <div class="text-sm text-gray-400">
                                Procesamiento estimado: 2-3 horas
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Orden 2 - Procesando -->
                <div class="bg-slate-700 rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                    <div class="p-6">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center space-x-4">
                                <div class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium">
                                    <i data-lucide="package" class="w-4 h-4 inline mr-1"></i>
                                    Procesando
                                </div>
                                <div class="text-gray-300">
                                    <span class="font-medium">Orden #ORD-2024-002</span>
                                    <span class="mx-2">•</span>
                                    <span>3 Jul 2025, 2:15 PM</span>
                                </div>
                            </div>
                            <div class="text-right">
                                <div class="text-2xl font-bold text-gray-200">$799.99</div>
                                <div class="text-sm text-gray-400">2 productos</div>
                            </div>
                        </div>

                        <!-- Progress Bar -->
                        <div class="mb-4">
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-sm font-medium text-white">Progreso del pedido</span>
                                <span class="text-sm text-gray-400">60%</span>
                            </div>
                            <div class="w-full bg-gray-200 rounded-full h-2">
                                <div class="bg-blue-600 h-2 rounded-full" style="width: 60%"></div>
                            </div>
                        </div>

                        <!-- Productos -->
                        <div class="border-t pt-4">
                            <div class="flex items-center space-x-4 mb-3">
                                <img src="https://via.placeholder.com/60x60" alt="Producto"
                                    class="w-15 h-15 object-cover rounded-lg">
                                <div class="flex-1">
                                    <h4 class="font-medium text-gray-200">MacBook Air M2</h4>
                                    <p class="text-sm text-gray-300">13", 256GB, Plata</p>
                                    <p class="text-sm font-medium text-gray-200">$1,199.99 x 1</p>
                                </div>
                            </div>
                        </div>

                        <!-- Acciones -->
                        <div class="flex items-center justify-between pt-4 border-t">
                            <div class="flex items-center space-x-4">
                                <button class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                                    <i data-lucide="eye" class="w-4 h-4 inline mr-1"></i>
                                    Ver detalles
                                </button>
                                <button class="text-green-600 hover:text-green-800 text-sm font-medium">
                                    <i data-lucide="message-circle" class="w-4 h-4 inline mr-1"></i>
                                    Contactar soporte
                                </button>
                            </div>
                            <div class="text-sm text-gray-400">
                                Envío estimado: 1-2 días
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Orden 3 - Enviado -->
                <div class="bg-slate-700 rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                    <div class="p-6">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center space-x-4">
                                <div class="bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm font-medium">
                                    <i data-lucide="truck" class="w-4 h-4 inline mr-1"></i>
                                    Enviado
                                </div>
                                <div class="text-gray-300">
                                    <span class="font-medium">Orden #ORD-2024-003</span>
                                    <span class="mx-2">•</span>
                                    <span>1 Jul 2025, 9:00 AM</span>
                                </div>
                            </div>
                            <div class="text-right">
                                <div class="text-2xl font-bold text-gray-200">$299.99</div>
                                <div class="text-sm text-gray-400">1 producto</div>
                            </div>
                        </div>

                        <!-- Tracking Info -->
                        <div class="bg-purple-100 border border-purple-200 rounded-lg p-4 mb-4">
                            <div class="flex items-center justify-between">
                                <div>
                                    <p class="text-sm font-medium text-purple-800">Número de seguimiento</p>
                                    <p class="text-lg font-mono text-purple-900">TRK-789456123</p>
                                </div>
                                <button
                                    class="bg-purple-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-purple-700">
                                    <i data-lucide="external-link" class="w-4 h-4 inline mr-1"></i>
                                    Rastrear
                                </button>
                            </div>
                        </div>

                        <!-- Productos -->
                        <div class="border-t pt-4">
                            <div class="flex items-center space-x-4 mb-3">
                                <img src="https://via.placeholder.com/60x60" alt="Producto"
                                    class="w-15 h-15 object-cover rounded-lg">
                                <div class="flex-1">
                                    <h4 class="font-medium text-gray-200">Apple Watch Series 9</h4>
                                    <p class="text-sm text-gray-300">45mm, GPS, Azul medianoche</p>
                                    <p class="text-sm font-medium text-gray-200">$399.99 x 1</p>
                                </div>
                            </div>
                        </div>

                        <!-- Acciones -->
                        <div class="flex items-center justify-between pt-4 border-t">
                            <div class="flex items-center space-x-4">
                                <button class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                                    <i data-lucide="eye" class="w-4 h-4 inline mr-1"></i>
                                    Ver detalles
                                </button>
                                <button class="text-purple-600 hover:text-purple-800 text-sm font-medium">
                                    <i data-lucide="map-pin" class="w-4 h-4 inline mr-1"></i>
                                    Ver en mapa
                                </button>
                            </div>
                            <div class="text-sm text-gray-400">
                                Llegada estimada: 5 Jul 2025
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Orden 4 - Entregado -->
                <div class="bg-slate-700 rounded-lg shadow-sm border border-gray-200 overflow-hidden">
                    <div class="p-6">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center space-x-4">
                                <div class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-medium">
                                    <i data-lucide="check-circle" class="w-4 h-4 inline mr-1"></i>
                                    Entregado
                                </div>
                                <div class="text-gray-300">
                                    <span class="font-medium">Orden #ORD-2024-004</span>
                                    <span class="mx-2">•</span>
                                    <span>28 Jun 2025, 11:45 AM</span>
                                </div>
                            </div>
                            <div class="text-right">
                                <div class="text-2xl font-bold text-gray-200">$149.99</div>
                                <div class="text-sm text-gray-400">1 producto</div>
                            </div>
                        </div>

                        <!-- Delivery Info -->
                        <div class="bg-green-100 border border-green-200 rounded-lg p-4 mb-4">
                            <div class="flex items-center space-x-2">
                                <i data-lucide="check-circle" class="w-5 h-5 text-green-600"></i>
                                <div>
                                    <p class="text-sm font-medium text-green-800">Entregado el 30 Jun 2025 a las 2:30 PM
                                    </p>
                                    <p class="text-sm text-green-700">Recibido por: Juan Pérez</p>
                                </div>
                            </div>
                        </div>

                        <!-- Productos -->
                        <div class="border-t pt-4">
                            <div class="flex items-center space-x-4 mb-3">
                                <img src="https://via.placeholder.com/60x60" alt="Producto"
                                    class="w-15 h-15 object-cover rounded-lg">
                                <div class="flex-1">
                                    <h4 class="font-medium text-gray-200">Magic Mouse</h4>
                                    <p class="text-sm text-gray-300">Blanco, Bluetooth</p>
                                    <p class="text-sm font-medium text-gray-200">$79.99 x 1</p>
                                </div>
                            </div>
                        </div>

                        <!-- Acciones -->
                        <div class="flex items-center justify-between pt-4 border-t">
                            <div class="flex items-center space-x-4">
                                <button class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                                    <i data-lucide="eye" class="w-4 h-4 inline mr-1"></i>
                                    Ver detalles
                                </button>
                                <button class="text-yellow-600 hover:text-yellow-800 text-sm font-medium">
                                    <i data-lucide="star" class="w-4 h-4 inline mr-1"></i>
                                    Calificar
                                </button>
                                <button class="text-gray-300 hover:text-gray-800 text-sm font-medium">
                                    <i data-lucide="download" class="w-4 h-4 inline mr-1"></i>
                                    Factura
                                </button>
                            </div>
                            <div class="text-sm text-green-600 font-medium">
                                ¡Compra completada!
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Orden 5 - Cancelado -->
                <div class="bg-slate-700 rounded-lg shadow-sm border border-gray-200 overflow-hidden opacity-75">
                    <div class="p-6">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center space-x-4">
                                <div class="bg-red-100 text-red-800 px-3 py-1 rounded-full text-sm font-medium">
                                    <i data-lucide="x-circle" class="w-4 h-4 inline mr-1"></i>
                                    Cancelado
                                </div>
                                <div class="text-gray-300">
                                    <span class="font-medium">Orden #ORD-2024-005</span>
                                    <span class="mx-2">•</span>
                                    <span>25 Jun 2025, 4:20 PM</span>
                                </div>
                            </div>
                            <div class="text-right">
                                <div class="text-2xl font-bold text-gray-400 line-through">$599.99</div>
                                <div class="text-sm text-red-600">Reembolsado</div>
                            </div>
                        </div>

                        <!-- Cancellation Info -->
                        <div class="bg-red-100 border border-red-200 rounded-lg p-4 mb-4">
                            <div class="flex items-center space-x-2">
                                <i data-lucide="info" class="w-5 h-5 text-red-600"></i>
                                <div>
                                    <p class="text-sm font-medium text-red-800">Cancelado por solicitud del cliente</p>
                                    <p class="text-sm text-red-700">Reembolso procesado en 3-5 días hábiles</p>
                                </div>
                            </div>
                        </div>

                        <!-- Productos -->
                        <div class="border-t pt-4">
                            <div class="flex items-center space-x-4 mb-3">
                                <img src="https://via.placeholder.com/60x60" alt="Producto"
                                    class="w-15 h-15 object-cover rounded-lg grayscale">
                                <div class="flex-1">
                                    <h4 class="font-medium text-gray-400">iPad Pro 11"</h4>
                                    <p class="text-sm text-white">256GB, Wi-Fi, Gris espacial</p>
                                    <p class="text-sm font-medium text-gray-400 line-through">$799.99 x 1</p>
                                </div>
                            </div>
                        </div>

                        <!-- Acciones -->
                        <div class="flex items-center justify-between pt-4 border-t">
                            <div class="flex items-center space-x-4">
                                <button class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                                    <i data-lucide="eye" class="w-4 h-4 inline mr-1"></i>
                                    Ver detalles
                                </button>
                                <button class="text-green-600 hover:text-green-800 text-sm font-medium">
                                    <i data-lucide="refresh-cw" class="w-4 h-4 inline mr-1"></i>
                                    Volver a comprar
                                </button>
                            </div>
                            <div class="text-sm text-red-600">
                                Cancelado hace 4 días
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Paginación -->
            <div class="mt-8 flex items-center justify-between">
                <div class="text-sm text-white">
                    Mostrando <span class="font-medium">1</span> a <span class="font-medium">5</span> de <span
                        class="font-medium">23</span> órdenes
                </div>
                <nav class="flex items-center space-x-2">
                    <button class="px-3 py-2 text-sm text-gray-400 hover:text-white disabled:opacity-100" disabled>
                        <i data-lucide="chevron-left" class="w-4 h-4"></i>
                        Anterior
                    </button>
                    <button class="px-3 py-2 text-sm bg-blue-600 text-white rounded-lg">1</button>
                    <button class="px-3 py-2 text-sm text-white hover:text-gray-200">2</button>
                    <button class="px-3 py-2 text-sm text-white hover:text-gray-200">3</button>
                    <button class="px-3 py-2 text-sm text-white hover:text-gray-200">
                        Siguiente
                        <i data-lucide="chevron-right" class="w-4 h-4"></i>
                    </button>
                </nav>
            </div>
        </main>

        <!-- Footer -->
        <footer class="bg-gray-800 text-white mt-16">
            <div class="container mx-auto px-4 py-8">
                <div class="text-center">
                    <p>&copy; 2025 TechStore. Todos los derechos reservados.</p>
                </div>
            </div>
        </footer>

        <script>
            // Inicializar iconos de Lucide
            lucide.createIcons()

            // Funcionalidad básica para filtros
            document.addEventListener('DOMContentLoaded', function () {
                const statusFilter = document.querySelector('select')
                const dateInputs = document.querySelectorAll('input[type="date"]')

                // Ejemplo de filtrado (en producción conectarías con tu API)
                statusFilter.addEventListener('change', function () {
                    console.log('Filtro de estado:', this.value)
                    // Aquí harías la petición al servidor para filtrar
                })

                dateInputs.forEach(input => {
                    input.addEventListener('change', function () {
                        console.log('Filtro de fecha:', this.value)
                        // Aquí harías la petición al servidor para filtrar por fecha
                    })
                })
            });
        </script>
</body>

</html>