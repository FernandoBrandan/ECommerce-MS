<!-- views/cart.ejs -->
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrito de Compras</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#3B82F6',
                        secondary: '#10B981'
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-slate-800 min-h-screen">
    <%- include('../main/nav') %>


        <main class="w-[90vw] max-w-7xl mx-auto px-4 py-4 space-y-4">
            <div class="text-gray-400 text-sm mb-6">
                Visualizaci√≥n del flujo de estados de una orden, con datos enviados y recibidos en cada paso.
            </div>


            <div class="flex flex-wrap gap-4 justify-start">
                <div class="flex flex-col gap-2 w-full max-w-md bg-white p-4 rounded shadow">
                    <h2 class="text-lg font-semibold mb-2">Listado de productos</h2>
                    <% items.forEach(item=> { %>
                        <div class="flex justify-between text-sm border-b pb-1">
                            <span>
                                <%= item.name %>
                            </span>
                            <span>
                                <%= item.quantity %> x $<%= item.price.toFixed(2) %>
                            </span>
                        </div>
                        <% }) %>
                            <div>
                                <div class="mt-4 text-right font-semibold text-gray-700 border-t pt-2">
                                    Total: $<%= totalAmount.toFixed(2) %>
                                </div>
                                <a href="/order/checkout"
                                    class="mt-4 block w-full text-center bg-primary text-white py-2 rounded hover:bg-secondary">
                                    Pagar
                                </a>
                            </div>
                </div>
            </div>

        </main>
</body>

</html>