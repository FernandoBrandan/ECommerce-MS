<!-- Login -->
<section class="bg-white rounded-xl shadow p-6">
    <h2 class="text-xl font-semibold mb-4">Login</h2>
    <p class="text-sm mb-2 text-gray-500">POST http://localhost:80/api/users/v1/login</p>

    <form action="/login" method="post" class="space-y-4">
        <input type="text" name="email" placeholder="Email" class="w-full px-4 py-2 border rounded-md" />
        <input type="password" name="password" placeholder="Password" class="w-full px-4 py-2 border rounded-md" />
        <button type="submit" class="w-full bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700">
            Login
        </button>
    </form>
</section>