<!-- Update Product -->
<section class="mb-10 bg-white rounded-xl shadow p-6">
    <h3 class="text-xl font-semibold mb-4">Update Product</h3>
    <p class="text-sm mb-2 text-gray-500">PUT http://localhost:80/api/product</p>
    <form id="updateProductForm" class="space-y-4">
        <input type="number" name="id" placeholder="Product ID" class="w-full px-4 py-2 border rounded-md" required
            min="1" />
        <input type="text" name="name" placeholder="Product Name" class="w-full px-4 py-2 border rounded-md" required />
        <textarea name="description" placeholder="Description" class="w-full px-4 py-2 border rounded-md" rows="3"
            required></textarea>
        <input type="number" step="0.01" name="price" placeholder="Price" class="w-full px-4 py-2 border rounded-md"
            min="0" required />
        <input type="number" name="stock" placeholder="Stock" class="w-full px-4 py-2 border rounded-md" min="0"
            required />
        <button type="submit" class="w-full bg-yellow-600 text-white px-4 py-2 rounded-md hover:bg-yellow-700">Update
            Product</button>
    </form>
</section>