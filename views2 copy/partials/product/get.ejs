<!-- Get Product By Name -->
<section class="mb-10 bg-white rounded-xl shadow p-6">
    <h3 class="text-xl font-semibold mb-4">Get Product By Name</h3>
    <p class="text-sm mb-2 text-gray-500">GET http://localhost:80/api/product/:name</p>
    <form id="getProductForm" class="space-y-4">
        <input type="text" id="productName" placeholder="Product Name" class="w-full px-4 py-2 border rounded-md"
            required />
        <button type="button" class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700"
            onclick="getProductByName()">Get Product</button>
    </form>
</section>